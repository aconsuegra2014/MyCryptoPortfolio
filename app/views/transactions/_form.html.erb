<%= form_with(model: transaction) do |form| %>
  <% if transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :crypto_quantity %>
    <%= form.number_field :crypto_quantity, step: :any %>
  </div>

  <div class="field">
    <%= form.label :fiat_quantity %>
    <%= form.number_field :fiat_quantity, step: :any %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :crypto_currency_id %>
    <%= form.select :crypto_currency_id, @crypto_currencies, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.rich_text_area :note %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<div id="crypto-resume">
<% @crypto_currencies.each do |crypto_currency| %>
  <div data-fiat-spent="<%= Dashboard.spent_per_crypto crypto_currency.id %>">
    You have <%= Dashboard.amount_by_crypto crypto_currency.id %> <%= crypto_currency.ticker_symbol %><br>
    Currently represent <span class="fiat-value" id="<%= crypto_currency.ticker_symbol %>" data-amount="<%= Dashboard.amount_by_crypto crypto_currency.id %>">0</span> USD
    for a profit/lose of <span class="profit-lost">0</span> USD
  </div>
<% end %>
</div>

<%== pagy_nav(@pagy) %>

<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Crypto quantity</th>
      <th>Fiat quantity</th>
      <th>Date</th>
      <th>Crypto currency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.crypto_quantity %></td>
        <td><%= transaction.fiat_quantity %></td>
        <td><%= transaction.date %></td>
        <td><%= transaction.crypto_currency_id %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path %>
